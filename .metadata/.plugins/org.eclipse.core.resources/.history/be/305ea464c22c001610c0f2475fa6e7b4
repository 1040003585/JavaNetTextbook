//------------------- 文件名Client.java ------------------------------------------------
package _4_3Socket编程示例._4_4_2一对一的通信;

import java.io.BufferedOutputStream;
import java.io.IOException;
import java.io.OutputStream;
import java.io.OutputStreamWriter;
import java.net.Socket;
import java.net.UnknownHostException;
/**
 * 
 * Copyright ? 2016 Authors. All rights reserved.
 *
 * FileName: .java
 * @author : Wu_Being <1040003585@qq.com>
 * Date/Time: 2016-6-7/下午11:13:03
 * Description:
 */
public class Client {

	public static void main(String[] args) {
		
		try {
			Socket socket = new Socket("127.0.0.1",9090);
			OutputStream outs=socket.getOutputStream();
			BufferedOutputStream buffer=new BufferedOutputStream(outs);
			OutputStreamWriter out=new OutputStreamWriter(buffer,"ASCII");
			out.write("the java networking");
		} catch (UnknownHostException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
